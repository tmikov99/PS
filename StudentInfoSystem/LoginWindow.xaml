<Window x:Class="StudentInfoSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="Вход в системата" Height="250" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Path=Username}" VerticalAlignment="Center" Width="120" Margin="220,0,0,0" Grid.Row="0"/>
        <PasswordBox x:Name="boxPassword" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" MaxLength="10" PasswordChar="*" Margin="220,84,0,0" Grid.RowSpan="2"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="76" Grid.Row="1" Click="OnClick_Login" Margin="245,28,0,0"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="135,0,0,0" VerticalAlignment="Center"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="137,81,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
    </Grid>
</Window>
